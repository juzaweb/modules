{% if view_exists('theme::components.message') %}
    {% include 'theme::components.message' %}
{% else %}
    {% if message and status == 'success' %}
        <div class="alert alert-success">
            <i class="fe-icon-check"></i> {{ message }}
        </div>
    {% endif %}

    {% if errors.any() %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors.all() %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endif %}

{% block profile_content %}{% endblock %}